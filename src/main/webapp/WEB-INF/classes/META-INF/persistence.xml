<?xml version="1.0" encoding="UTF-8" ?>
<persistence version="2.0"
             xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
                                 http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

    <persistence-unit name="persistenceUnit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.wisegas.grapp.domain.value.GrappUserListItem</class>
        <class>com.wisegas.grapp.domain.value.GrappStoreNodeItem</class>
        <class>com.wisegas.grapp.domain.entity.GrappItem</class>
        <class>com.wisegas.grapp.domain.entity.GrappUser</class>
        <class>com.wisegas.grapp.domain.entity.GrappUserList</class>
        <class>com.wisegas.grapp.domain.entity.GrappStore</class>
        <class>com.wisegas.grapp.domain.entity.GrappStoreNode</class>
        <class>com.wisegas.grapp.domain.entity.GrappStoreLayout</class>
        <class>com.wisegas.grapp.domain.entity.GrappStoreLayoutFeature</class>
        <exclude-unlisted-classes/>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgresPlusDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
        </properties>
    </persistence-unit>

</persistence>