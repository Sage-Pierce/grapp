<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-lazy-init="true">

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="location" value="classpath:properties/application.properties"/>
    </bean>

    <import resource="classpath:META-INF/spring/beans/database-beans.xml"/>
    <import resource="classpath:META-INF/spring/beans/persistence-beans.xml"/>
    <import resource="classpath:META-INF/spring/beans/client-beans.xml"/>
    <import resource="classpath:META-INF/spring/beans/application-beans.xml"/>
</beans>