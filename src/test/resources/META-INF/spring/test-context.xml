<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-lazy-init="true">

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="location" value="classpath:properties/test.properties"/>
    </bean>

    <import resource="classpath:META-INF/spring/beans/test-database-beans.xml"/>
    <import resource="classpath:META-INF/spring/beans/persistence-beans.xml"/>
    <import resource="classpath:META-INF/spring/beans/application-beans-scan.xml"/>
    <import resource="classpath:META-INF/spring/beans/application-beans.xml"/>

    <!-- A TestEntityManager to use with Persistence Tests -->
    <bean id="testEntityManager" class="com.wisegas.common.test.entity.TestEntityManager">
        <constructor-arg>
            <bean class="org.springframework.orm.jpa.support.SharedEntityManagerBean">
                <property name="entityManagerFactory" ref="entityManagerFactory"/>
            </bean>
        </constructor-arg>
        <constructor-arg ref="platformTransactionManager"/>
    </bean>
</beans>