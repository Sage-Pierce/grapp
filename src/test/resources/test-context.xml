<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-lazy-init="true">

    <import resource="classpath:/test-persistence-beans.xml"/>
    <import resource="classpath:/transaction-beans.xml"/>
    <import resource="classpath:/application-beans.xml"/>

    <!-- A 'shared' EntityManager to be made available for Injection (TESTS ONLY) -->
    <bean id="sharedEntityManager" class="org.springframework.orm.jpa.support.SharedEntityManagerBean">
        <property name="entityManagerFactory" ref="entityManagerFactory"/>
    </bean>

    <!-- An IntegrationTestEntityManager to use with Integration Tests -->
    <bean id="testEntityManager" class="com.wisegas.common.test.IntegrationTestEntityManager">
        <constructor-arg ref="sharedEntityManager"/>
        <constructor-arg ref="platformTransactionManager"/>
    </bean>
</beans>